{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@config/*": ["config/*"],
			"@routes/*": ["routes/*"],
			"@controllers/*": ["controllers/*"],
			"@services/*": ["services/*"],
			"@middlewares/*": ["middlewares/*"],
			"@utils/*": ["utils/*"],
			"@types/*": ["types/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	}
}
